<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_gravity="center_horizontal"
	android:gravity="center_horizontal" android:background="#FF000000">
	<RelativeLayout android:background="#FF006699"
		android:focusable="true" android:focusableInTouchMode="true"
		android:id="@+id/titleTitleBar" android:orientation="horizontal"
		android:gravity="center_horizontal|center_vertical"
		android:layout_gravity="center_horizontal|center_vertical"
		android:layout_alignParentTop="true" android:layout_height="46dip"
		android:layout_width="fill_parent">
		<TextView android:id="@+id/listTitle" android:textColor="#fff0f0f0"
			android:textStyle="bold" android:textSize="25dp"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:shadowColor="#202020" android:shadowDy="2.0"
			android:shadowDx="2.0" android:shadowRadius="2.5"
			android:gravity="center_horizontal|center_vertical"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_centerHorizontal="true" android:layout_width="fill_parent" />
	</RelativeLayout>
	<Spinner android:id="@+id/spinner_categories"
		android:layout_marginLeft="8dip" android:layout_marginRight="8dip"
		android:layout_marginTop="7dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:prompt="@string/form_category_label" />
	<TextView android:id="@+id/nocards_text"
		android:layout_gravity="center_horizontal" android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="There are no NameCards in this category."
		android:visibility="gone" android:textSize="24dip" android:textColor="#FFFFFFFF" />
	<ListView android:id="@+id/list" android:orientation="vertical"
		android:cacheColorHint="#00000000" android:divider="@drawable/list_divider"
		android:dividerHeight="1dip" android:clickable="true"
		android:layout_width="fill_parent" android:layout_height="fill_parent" />
</LinearLayout>
