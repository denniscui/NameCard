<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_gravity="center_horizontal"
	android:gravity="center_horizontal">
	<TextView android:layout_width="wrap_content" android:id="@+id/category_prompt"
		android:layout_height="wrap_content" android:text="Choose a category: " />

	<Spinner android:id="@+id/spinner_categories"
		android:layout_marginTop="15dip" android:layout_width="200dip"
		android:layout_height="wrap_content" android:prompt="@string/form_category_label" />

	<CheckBox android:id="@+id/save_to_phone_contacts"
		android:layout_height="wrap_content" android:text="Save to phone contacts"
		android:textColor="#FF000000" android:layout_width="wrap_content" />

	<Button android:id="@+id/category_confirm" android:text="Confirm"
		android:layout_marginBottom="10dip" android:layout_marginTop="15dip"
		android:layout_width="200px" android:gravity="center_vertical|center_horizontal"
		android:layout_height="wrap_content" android:layout_gravity="center_vertical|center_horizontal|center" />

</LinearLayout>
