<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent">
	<LinearLayout android:id="@+layout/listrow_layout"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_gravity="center_horizontal"
		android:gravity="center_horizontal">
		<ImageView android:layout_width="100dip" android:id="@+id/listrow_image"
			android:layout_marginLeft="10dip" android:layout_height="100dip"
			android:src="@drawable/defaulticon" android:layout_marginTop="5dip"
			android:layout_marginBottom="5dip" android:background="@drawable/rounded_border" />
		<LinearLayout android:id="@+layout/listrow_layout"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:gravity="center_vertical"
			android:layout_gravity="center_vertical">
			<TextView xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_marginLeft="10dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/listrow_name"
				android:textStyle="bold" android:textSize="19sp" android:textColor="@color/white" />
			<TextView android:layout_marginLeft="10dip"
				android:layout_width="fill_parent" android:layout_height="5dip" />
			<TextView xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_marginLeft="10dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/listrow_phoneNum"
				android:textStyle="bold" android:textSize="16sp" android:textColor="#FF006699" />
		</LinearLayout>
	</LinearLayout>
</FrameLayout>